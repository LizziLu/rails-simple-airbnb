<h1>All our Flats</h1>

<% @flats.each do |flat| %>

<div class="d-inline-flex p-2 bd-highlight">
  <div class="card" style="width: 20rem;">
    <img src="https://images.unsplash.com/photo-1589664015311-77314bf218df?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=668&q=80" style="height: 15rem;"class="card-img-top" alt="Flat Paris">
    <div class="card-body">
      <h5 class="card-title"><%= flat.name %></h5>
      <p class="card-text"><%= flat.address %></p>
      <div class="d-inline-flex p-2 bd-highlight">
        <p class="card-text"><%= flat.price_per_night %></p>
        <p class="card-text"><%= flat.number_of_guests %></p>
      </div>
      <%= link_to "More Info", flat, class: "link-primary .text-decoration-none "%>
      <%= link_to "Edit", edit_flat_path(flat), class: "link-success .text-decoration-none "%>
      <%= link_to "Remove", flat, class: "link-warning .text-decoration-none "%>
    </div>
  </div>
</div>
<% end %>
